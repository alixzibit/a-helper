<Window x:Class="ahelper.Opt_dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ahelper"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="Optimizing Selected Settings" Height="200" Width="345">
    <Window.Background>
        <ImageBrush ImageSource="/Resources/darkbg2.png" Stretch="none" TileMode="None" Opacity="0.6"/>
    </Window.Background>
    <Grid Margin="0,-5,0,0">
        <TextBlock x:Name="statusTextBlock" HorizontalAlignment="Center" Height="155" Margin="0,9,0,0" TextWrapping="Wrap" Text="Processing selected options" VerticalAlignment="Top" Width="315" Foreground="White" IsEnabled="False"/>
        <Button x:Name="button" Content="OK" FocusVisualStyle="{StaticResource FocusVisualStyle2}" HorizontalAlignment="Left" Height="20" Margin="235,165,0,0" VerticalAlignment="Top" Width="95" Visibility="Visible" Background="{x:Null}" Foreground="White" Click="button_Click_1"/>

    </Grid>
</Window>
